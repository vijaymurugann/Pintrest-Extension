{
  "manifest_version": 3,
  "name": "Pinterest Image Unblocker",
  "version": "1.2",
  "description": "Removes the login overlay on Pinterest pages, allowing you to copy and save images.",
  "author": "Coding Partner",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pinterest.com/pin/*",
        "*://*.pinterest.co.uk/pin/*",
        "*://*.pinterest.ca/pin/*",
        "*://*.pinterest.de/pin/*",
        "*://*.pinterest.fr/pin/*",
        "*://*.pinterest.jp/pin/*",
        "*://*.pinterest.com.au/pin/*",
        "*://*.pinterest.it/pin/*",
        "*://*.pinterest.es/pin/*",
        "*://*.pinterest.in/pin/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
